 <html>
  <body>
    <main role="main">
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3 text-white">ChrisEvent</h1>
          <h3 class="text-white">Ici, on fait des choses !</h3>
          <p><a <%= link_to "Crée Event", new_event_path, :class =>"btn btn-secondary btn-lg" %>></a></p>
        </div>
      </div>
      <div class='sizelimit'>
        <div class="container">
          <!-- Example row of columns -->
          <div class="row">
            <div class="cardevent">
              <% @event.each do |e|%>
                <div class="col-md-4">
                  <h2><%=e.title%></h2>
                  <p><%=e.description%> </p>
                  <%= link_to "Lien vers l'évènement", event_path(e.id), :class => "btn btn-info"%>
                  <br>
                  <br>
                  <br>
                </div>
              <% end %>
            </div>
          </div>
          <hr>
        </div>
      </div>
      <!-- /container -->
    </main>
    <footer class="container">
      <p>©Chris 2020-4ever</p>
    </footer>
